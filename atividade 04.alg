algoritmo "semnome"
var
   n1, n2: inteiro
   soma: inteiro
inicio

      Escreval("Vamos somar dois numeros ")
      escreval("Digite o primeiro numero: ")
      Leia(n1)
      Escreval("Digite o segundo numero: ")
      Leia(n2)
      
      soma <-  n1 + n2
      Escreval(" A soma de", n1, " +", n2, " é =", soma)
fimalgoritmo
